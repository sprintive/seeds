<div id="auth_box" class="login login-box">
  <div id="top_part">
    <h1 id="the_logo" class="user-login-logo">
      <a href="{{ url('<front>') }}">
        <img src="{{ login_logo }}" alt="{{ site_name }}" />
      </a>
    </h1>
  </div>

  <div id="middle_part">
    <h2 class="title">{{ title }}</h2>

    {{ messages }}

    {{ page.content }}
  </div>

  <div id="bottom_part">
    <div class="password_link">
      <a href="{{ path('user.pass') }}">{{ 'Forgot your password?'|t }}</a>
    </div>

    <div class="register_link">
      <a href="{{ path('user.register') }}">{{ 'Register a new account'|t }}</a>
    </div>

    <div class="back_link">
      <a href="{{ url('<front>') }}">&larr; {{ 'Back'|t }} {{ site_name }}</a>
    </div>
  </div>
</div>
